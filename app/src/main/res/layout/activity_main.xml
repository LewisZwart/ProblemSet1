<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lewis.problemset1.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:id="@+id/body"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/arms"
        android:id="@+id/arms"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/ears"
        android:id="@+id/ears"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/eyebrows"
        android:id="@+id/eyebrows"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/eyes"
        android:id="@+id/eyes"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/glasses"
        android:id="@+id/glasses"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/hat"
        android:id="@+id/hat"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/mouth"
        android:id="@+id/mouth"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/mustache"
        android:id="@+id/mustache"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/nose"
        android:id="@+id/nose"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/shoes"
        android:id="@+id/shoes"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Choose the attributes of Mr Potatohead:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

        <CheckBox
            android:id="@+id/check_arms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Arms"/>

        <CheckBox
            android:id="@+id/check_ears"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ears"/>

        <CheckBox
            android:id="@+id/check_eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Eyebrows"/>

        <CheckBox
            android:id="@+id/check_eyes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Eyes"/>

        <CheckBox
            android:id="@+id/check_glasses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Glasses"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_hat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hat"/>

            <CheckBox
                android:id="@+id/check_mouth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mouth"/>

            <CheckBox
                android:id="@+id/check_mustache"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mustache"/>

            <CheckBox
                android:id="@+id/check_nose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nose"/>

            <CheckBox
                android:id="@+id/check_shoes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Shoes"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
